<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <!-- Brand/logo -->
        <a class="navbar-brand" href="#">Inmobiliaria!</a>

        <!-- Links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                @Html.ActionLink("Inmuebles", "Index", "Inmuebles", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Propietarios", "Index", "Propietarios", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Inquilinos", "Index", "Inquilinos", null, new { @class = "nav-link" })
            </li>
        </ul>
    </nav>
    <div style="padding:10px;">
        @RenderBody()
    </div>
</body>
</html>
